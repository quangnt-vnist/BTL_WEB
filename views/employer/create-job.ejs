
<%- include ('../template/header.ejs') -%>

<!-- Jquery JS-->
<body>
<div class="page-wrapper p-t-100 p-b-100 font-robo"> <!-- bg-blue -->
    <!-- <div class="wrapper wrapper--w680"> -->
    <div class="wrapper" style="margin-top: -100px; width: 50%;">
        <div class="card card-3">
            <img src="/images/bg-head-03.jpg" style="height: 300px;">
            <div class="card-heading"></div>
            <div class="card-body">
                <h2 class="title">Tạo thông tin tuyển dụng</h2>
                <form method="POST" action="/employer/create-job">
                    <div class="row row-space">
                    <div class="col-md-12">
                        <div class="input-group">
                            <input class="input--style-1" type="text" placeholder="Tên công việc" name="name">

                        </div>
                    </div>

                </div>
                <div class="row row-space">
                    <div class="col-md-12">
                        <div class="input-group">
                            <div class="rs-select2 js-select-simple select--no-search">
                                <select name="level">
                                    <!-- <option disabled="disabled" >Yêu cầu về trình độ</option> -->
                                    <option disabled="disabled" selected="selected">Yêu cầu về trình độ</option>
                                    <option value="Junior">Junior</option>
                                    <option value="Senior">Senior</option>
                                    <option value="Master">Master</option>
                                </select>
                                <div class="select-dropdown"></div>
                            </div>
                        </div>
                    </div>
                </div>    
                    <div class="rs-select2 js-select-simple select--no-search">
                        <div class="input-group">
                        Lĩnh vực kinh doanh
                        <select name="fields" id="class" multiple="multiple">
                            <!-- <option disabled="disabled" selected="selected">Lĩnh vực kinh doanh</option> -->
                            <!-- <option disabled="disabled" >Lĩnh vực kinh doanh</option> -->
                            <option value="DesignUI">DesignUI</option>
                            <option value="Frontend Developer">Frontend Developer</option>
                            <option value="Backend Developer">Backend Developer</option>
                            <option value="App Mobile">App Mobile</option>
                            <option value="Android Developer">Android Developer</option>
                            <option value="Data Scientist">Data Scientist</option>
                        </select>
                        <div class="select-dropdown"></div>
                    </div>
                    </div>
                <script type="text/javascript">
                    $(document).ready(function() {
                        $('#class').multiselect();
                    });
                </script>
                <div class="row row-page">
                        <div class="col-md-6">
                            <div class="input-group">
                                <div class="rs-select2 js-select-simple select--no-search">
                                    <select name="timeOfWork">
                                        <option disabled="disabled" selected="selected">Thời gian làm việc</option>
                                        <option value="1 tháng">1 tháng</option>
                                        <option value="1-3 tháng">1-3 tháng</option>
                                        <option value="> 3 tháng">> 3 tháng</option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <input class="input--style-1" type="text" placeholder="Ngân sách" name="budget">

                            </div>
                        </div>
                    </div>


                <div class="row row-space">
                    <div class="col-12">
                        <div class="input-group">
                            <textarea class="form-control" id="exampleFormControlTextarea1" name="description" placeholder="Mô tả công việc" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                    <div class="p-t-20">
                        <button class="btn btn--radius btn--green" type="submit">Tạo công việc</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/vendor/jquery/jquery.min.js"></script>
<!-- Vendor JS-->
<script src="/vendor/select2/select2.min.js"></script>
<script src="/vendor/datepicker/moment.min.js"></script>
<script src="/vendor/datepicker/daterangepicker.js"></script>

<!-- Main JS-->
<script src="/javascripts/global.js"></script>
<script type="text/javascript" src="/javascripts/bootstrap-multiselect.js"></script>


</body>
<%- include ('../template/footer.ejs') -%>

